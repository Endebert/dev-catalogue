<Configuration status="warn" strict="true" name="Rethink Catalogue Broker"
               packages="org.apache.logging.log4j.test">

    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="%highlight{%d %level{length=1} %-18c{1} %m%n}"/>
        </Appender>
    </Appenders>

    <Loggers>
        <Logger name="eu.rethink.catalogue" level="info" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Root level="warn">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>

</Configuration>