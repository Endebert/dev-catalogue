<Configuration status="warn" strict="true" name="Rethink Catalogue Database"
               packages="org.apache.logging.log4j.test">

    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="%d %-5level %-18c{1} %m%n"/>
        </Appender>
    </Appenders>

    <Loggers>
        <Logger name="eu.rethink.catalogue" level="debug" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>

</Configuration>